{
  "name": "geo-analyzer-electron",
  "version": "1.0.0",
  "main": "main.js",
  "devDependencies": {
    "electron": "^28.0.0"
  },
  "build": {
    "appId": "com.geoanalyzer.app",
    "productName": "Geo Analyzer",
    "directories": {
      "output": "../dist"
    },
    "extraResources": [
      {
        "from": "../dist/backend_bin/geo_backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": ["nsis", "zip"]
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "tar.gz"],
      "category": "Science"
    }
  }
}